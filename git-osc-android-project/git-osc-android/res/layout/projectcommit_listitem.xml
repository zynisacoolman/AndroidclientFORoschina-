<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <!-- 项目作者头像 -->
    <net.oschina.gitapp.widget.CircleImageView
        android:id="@+id/projectcommit_listitem_userface"
        style="@style/UserFaceImageStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <!-- 用户昵称 -->
        <TextView
            android:id="@+id/projectcommit_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_blue"
            android:text="火蚁"
            android:textSize="@dimen/text_size_14" />

        <!-- commit内容-->
        <TextView
            android:id="@+id/projectcommit_listitem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:textColor="@color/listitem_black"
            android:textColorLink="@color/listitem_blue"
            android:text="2014-05-23工作提交报告：个人动态列表内容显示"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >
            
            <!-- 时间 -->			
            <TextView
                android:id="@+id/projectcommit_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/listitem_gray"
                android:text="3个月前"
                android:textSize="@dimen/text_size_10" />
				
        </LinearLayout>
    </LinearLayout>

</LinearLayout>